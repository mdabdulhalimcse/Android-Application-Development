                android:background="#00ffaa"
                android:textSize="22dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_cv1"
                android:textSize="20dp"
                android:layout_margin="5dp"
